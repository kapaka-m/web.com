{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "lint": "npm run lint:js",
        "lint:js": "eslint resources/js --max-warnings=0",
        "lint:fix": "eslint resources/js --fix",
        "format": "npm run format:js",
        "format:js": "prettier --write \"resources/js/**/*.{js,jsx}\" \"resources/css/**/*.css\" \"resources/views/**/*.blade.php\"",
        "format:check": "prettier --check \"resources/js/**/*.{js,jsx}\" \"resources/css/**/*.css\" \"resources/views/**/*.blade.php\"",
        "test:e2e": "playwright test"
    },
    "devDependencies": {
        "@headlessui/react": "^2.0.0",
        "@inertiajs/react": "^2.0.0",
        "@playwright/test": "^1.49.0",
        "@tailwindcss/forms": "^0.5.3",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.12",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.10.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "^5.1.0",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "prettier": "^3.3.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.2.1",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "bootstrap": "^5.3.8"
    },
    "engines": {
        "node": "^20.19.0 || >=22.12.0"
    }
}
